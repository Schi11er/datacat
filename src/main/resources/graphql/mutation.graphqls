input LocalizedTextInput {
    languageTag: String!
    text: String!
}

input TagInput {
    scope: String
    names: [LocalizedTextInput!]!
    descriptions: [LocalizedTextInput!]
}

type Mutation {
    createTag(id: ID, input: TagInput!): Tag!
    updateTag(id: ID!, input: TagInput!): Tag!
    deleteTag(id: ID!): Tag!
    tag(conceptId: ID!, tagId: ID!): Entity!
    untag(conceptId: ID!, tagId: ID!): Entity!
}
