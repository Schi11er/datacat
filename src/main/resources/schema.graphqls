directive @fetch(from : String!) on FIELD_DEFINITION

type Page {
    pageNumber: Int!
    pageSize: Int!
    pageElements: Int!
    totalPages: Int!
    totalElements: Int!
    hasNext: Boolean!
    hasPrevious: Boolean!
    isFirst: Boolean!
    isLast: Boolean!
}

type XtdLanguage {
    id: ID!
    created: String!
    lastModified: String!
    languageNameInEnglish: String!
    languageNameInSelf: String!
}

type XtdLanguageConnection {
    nodes: [XtdLanguage!]!
    page: Page!
}

type XtdName {
    id: ID!
    created: String!
    lastModified: String!
    value: String! @fetch(from: "name")
    languageName: XtdLanguage!
}

type XtdDescription {
    id: ID!
    created: String!
    lastModified: String!
    value: String! @fetch(from: "description")
    languageName: XtdLanguage!
}

union XtdLanguageRepresentation = XtdName | XtdDescription

