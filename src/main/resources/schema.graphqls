input PagingOptions {
    pageSize: Int
    pageNumber: Int
}

input SearchOptions {
    term: String
    pageSize: Int
    pageNumber: Int
}

type Query {
    language(id: ID!): XtdLanguage
    languages(options: SearchOptions): XtdLanguageConnection

    document(id: ID!): XtdExternalDocument
    documents(options: SearchOptions): XtdExternalDocumentConnection

    actor(id: ID!): XtdActor
    actors(options: SearchOptions): XtdActorConnection

    activity(id: ID!): XtdActivity
    activities(options: SearchOptions): XtdActivityConnection

    classification(id: ID!): XtdClassification
    classifications(options: SearchOptions): XtdClassificationConnection

    measure(id: ID!): XtdExternalDocument
    measures(options: SearchOptions): XtdMeasureWithUnitConnection

    property(id: ID!): XtdProperty
    properies(options: SearchOptions): XtdPropertyConnection

    subject(id: ID!): XtdSubject
    subjects(options: SearchOptions): XtdSubjectConnection

    unit(id: ID!): XtdUnit
    units(options: SearchOptions): XtdUnitConnection

    value(id: ID!): XtdValue
    values(options: SearchOptions): XtdValueConnection

    bag(id: ID!): XtdBag
    bags(options: SearchOptions): XtdBagConnection

    nest(id: ID!): XtdNest
    nests(options: SearchOptions): XtdNestConnection

    documentsRelation(id: ID!): XtdRelDocuments
    documentsRelations(options: SearchOptions): XtdRelDocumentsConnection

    associatesRelation(id: ID!): XtdRelAssociates
    associatesRelations(options: SearchOptions): XtdRelAssociatesConnection

    groupsRelation(id: ID!): XtdRelGroups
    groupsRelations(relatingObject: ID, relatedObject: ID, options: SearchOptions): XtdRelGroupsConnection
}

input LanguageInput {
    id: ID!
    languageNameInEnglish: String!
    languageNameInSelf: String!
}

input TextInput {
    id: ID
    languageCode: ID!
    value: String!
}

input ExternalDocumentInput {
    id: ID
    names: [TextInput!]!
}

input RootInput {
    id: ID
    versionId: String
    versionDate: String
    names: [TextInput!]!
    descriptions: [TextInput!]
}

type Mutation {
    createLanguage(language: LanguageInput!): XtdLanguage
    deleteLanguage(id: ID!): XtdLanguage

    createDocument(document: ExternalDocumentInput!): XtdExternalDocument
    deleteDocument(id: ID!): XtdExternalDocument

    createActor(actor: RootInput!): XtdActor
    deleteActor(id: ID!): XtdActor

    createActivity(activity: RootInput!): XtdActivity
    deleteActivity(id: ID!): XtdActivity

    createClassification(classification: RootInput!): XtdClassification
    delXtdClassification(id: ID!): XtdClassification

    createMeasure(measure: RootInput!): XtdMeasureWithUnit
    deleteMeasure(id: ID!): XtdMeasureWithUnit

    createProperty(property: RootInput!): XtdProperty
    deleteProperty(id: ID!): XtdProperty

    createSubject(subject: RootInput!): XtdSubject
    deleteSubject(id: ID!): XtdSubject

    createUnit(unit: RootInput!): XtdUnit
    deleteUnit(id: ID!): XtdUnit

    createValue(value: RootInput!): XtdValue
    deleteValue(id: ID!): XtdValue

    createDocumentsRelation(relatingDocument: ID!, relatedObjects: [ID!]!, relation: RootInput!): XtdRelDocuments
    deleteDocumentsRelation(id: ID!): XtdRelDocuments

    createAssociatesRelation(relatingObject: ID!, relatedObjects: [ID!]!, relation: RootInput!): XtdRelAssociates
    deleteAssociatesRelation(id: ID!): XtdRelAssociates

    createGroupsRelation(relatingObject: ID!, relatedObjects: [ID!]!, relation: RootInput!): XtdRelGroups
    addRelatedObjectsToGroupsRelation(id: ID!, relatedObjects: [ID!]!): XtdRelGroups
    removeRelatedObjectsFromGroupsRelation(id: ID!, relatedObjects: [ID!]!): XtdRelGroups
    deleteGroupsRelation(id: ID!): XtdRelGroups
}

schema {
    query: Query
    mutation: Mutation
}
